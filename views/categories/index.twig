{% extends '../layout.twig' %}

{% block content %}
    <h1>Categories list</h1>
    <a href="/categories/create" class="btn btn-primary btn-sm">New category</a>
    <table class="table">
        <thead>
            <tr>
                <th>nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for c in categories %}
                <tr>
                    <td>{{ c.name }}</td>
                    <td>
                        <a href="/categories/{{ c._id }}" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-pencil"></i></a>
                        <a href="/categories/{{ c._id }}/delete" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}